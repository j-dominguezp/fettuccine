{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "moduleResolution": "node"
    },
    "exclude": ["node_modules", "dist", "__tests__"]
}
